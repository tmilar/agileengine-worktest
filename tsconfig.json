{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2017"],
    "target": "es2017",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "inlineSources": true,
    "esModuleInterop": true,
    "sourceRoot": "./src",
    "baseUrl": "."
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
